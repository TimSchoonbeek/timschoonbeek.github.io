---
import { siteConfig } from "../config";
const hasPatents = siteConfig.patents && siteConfig.patents.length > 0;
---

{
  hasPatents && (
    <section id="patents" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4 lg:sticky lg:top-24">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-6xl font-bold text-gray-900 leading-tight">
              Patents
            </h2>
            <div
              class="w-[75px] h-[5px] mt-4 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8 mt-8 lg:mt-0">
            <div class="space-y-8">
              {siteConfig.patents.map((patent, index) => {
                return (
                  <div class="group relative">
                    <div
                      class="block relative p-4 sm:p-6 md:p-8 bg-gray-50 rounded-xl sm:rounded-2xl border border-gray-200 transition-all duration-300"
                    >
                      <div class="space-y-4">
                        <div>
                          <span
                            class="text-sm font-mono"
                            style={{ color: siteConfig.accentColor }}
                          >
                            IP{index + 1}
                          </span>
                          <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mt-1">
                            {patent.title}
                          </h3>
                          <p class="text-base text-gray-700 mt-1 font-medium" set:html={patent.authors}>
                          </p>
                          <p class="text-sm text-gray-600 mt-1 italic">
                            {patent.venue}
                          </p>
                        </div>

                        <p class="text-base sm:text-lg text-gray-600 leading-relaxed">
                          {patent.description}
                        </p>

                        {patent.tags && patent.tags.length > 0 && (
                          <div class="flex flex-wrap gap-1.5 sm:gap-2 pt-2">
                            {patent.tags.map((tag) => (
                              <span
                                class="px-2.5 sm:px-3 py-1 sm:py-1.5 bg-gray-900 text-white rounded-md sm:rounded-lg text-xs sm:text-sm font-medium transition-all duration-300"
                              >
                                {tag}
                              </span>
                            ))}
                          </div>
                        )}
                      </div>
                    </div>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
